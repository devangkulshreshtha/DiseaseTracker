<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="devang.developer.com.diseasetracker">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SplashScreen"
            android:label="Disease Tracker"
            android:screenOrientation="portrait">
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".ReportListProvider"
            android:authorities="com.developer.devang.ReportListProvider"></provider>

        <activity
            android:name=".Symptoms"
            android:label="@string/title_activity_symptoms"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".SymptomsDetail"
            android:label="@string/title_activity_symptoms_detail"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Symptoms2"
            android:label="@string/title_activity_symptoms2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".RiskFactors"
            android:label="@string/title_activity_risk_factors"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Questions"
            android:label="@string/title_activity_questions"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Results"
            android:label="@string/title_activity_results"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"></activity>
        <activity
            android:name=".ResultDetails"
            android:label="@string/title_activity_result_details"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".History"
            android:label="@string/title_activity_history"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>
