<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tool_bar2"
        layout="@layout/tool_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/pager"
            android:layout_alignStart="@+id/pager"
            android:layout_alignRight="@+id/pager"
            android:layout_alignEnd="@+id/pager">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:background="#8bc34a"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:background="#ff9800"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"
                android:background="#bc171c"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:layout_alignRight="@+id/linearLayout3"
            android:layout_alignEnd="@+id/linearLayout3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary_text"
                android:gravity="right"
                android:text="@string/less60"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:layout_weight="1"
                android:text="60 - 90"/>
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/primary_text"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/greater90"/>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/date"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02/02/2015"
            android:layout_marginLeft="32dp"
            android:textColor="@color/primary_text"
            android:id="@+id/textView5"
            android:layout_alignTop="@+id/imageView9"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_toRightOf="@+id/imageView9"
            android:layout_toEndOf="@+id/imageView9" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/time"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/imageView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:10"
            android:layout_marginLeft="32dp"
            android:textColor="@color/primary_text"
            android:id="@+id/textView6"
            android:layout_alignTop="@+id/imageView10"
            android:gravity="center"
            android:layout_alignBottom="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView10"
            android:layout_toEndOf="@+id/imageView10" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivrate"
            android:src="@drawable/ic_action_star"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:layout_marginLeft="32dp"
            android:textColor="@color/primary_text"
            android:id="@+id/tvrating"
            android:layout_alignTop="@+id/ivrate"
            android:gravity="center"
            android:layout_alignBottom="@+id/ivrate"
            android:layout_toRightOf="@+id/ivrate"
            android:layout_toEndOf="@+id/ivrate" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivnote"
            android:src="@drawable/note"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/ivrate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Awsome ap"
            android:layout_marginLeft="32dp"
            android:textColor="@color/primary_text"
            android:id="@+id/tvnote"
            android:layout_alignTop="@+id/ivnote"
            android:gravity="center"
            android:layout_alignBottom="@+id/ivnote"
            android:layout_toRightOf="@+id/ivnote"
            android:layout_toEndOf="@+id/ivnote" />
    </RelativeLayout>
</LinearLayout>