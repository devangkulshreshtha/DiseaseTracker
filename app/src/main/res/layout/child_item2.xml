<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="16.0dip">
    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="057%"
        android:textAppearance="?android:textAppearanceLarge" />

    <ProgressBar
        android:id="@+id/progressBar7"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvPercent"
        android:layout_marginLeft="16.0dip"
        android:layout_toEndOf="@id/tvPercent"
        android:layout_toRightOf="@id/tvPercent"
        android:progress="57" />

    <TextView
        android:id="@+id/tvDisease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/progressBar7"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/progressBar7"
        android:text="Lung cancer" />

    <TextView
        android:id="@+id/tvSymptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/progressBar7"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/progressBar7"
        android:text="4/7 symptoms matched" />

</RelativeLayout>