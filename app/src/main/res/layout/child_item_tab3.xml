<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16.0dip">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textView8"
        android:textColor="@color/secondary_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="49"
        android:textColor="@color/primary_text"
        android:id="@+id/tvPercent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/06/2015"
        android:id="@+id/tvDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Measles"
        android:layout_marginLeft="16dp"
        android:id="@+id/tvDisease"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvPercent"
        android:layout_toEndOf="@+id/tvPercent" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:progressDrawable="@drawable/progress"
        android:id="@+id/progressBar7"
        android:layout_alignLeft="@+id/tvDisease"
        android:layout_alignStart="@+id/tvDisease"
        android:layout_below="@+id/tvDisease"
        android:progress="40"
        android:layout_marginTop="2dp"
        android:layout_alignRight="@+id/tvDate"
        android:layout_alignEnd="@+id/tvDate" />
</RelativeLayout>